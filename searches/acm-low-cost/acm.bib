@inproceedings{10.1145/3489517.3530550,
author = {Caulfield, Adam and Rattanavipanon, Norrathep and De Oliveira Nunes, Ivan},
title = {ASAP: reconciling asynchronous real-time operations and proofs of execution in simple embedded systems},
year = {2022},
isbn = {9781450391429},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3489517.3530550},
doi = {10.1145/3489517.3530550},
abstract = {Embedded devices are increasingly ubiquitous and their importance is hard to overestimate. While they often support safety-critical functions (e.g., in medical devices and sensor-alarm combinations), they are usually implemented under strict cost/energy budgets, using low-end microcontroller units (MCUs) that lack sophisticated security mechanisms. Motivated by this issue, recent work developed architectures capable of generating Proofs of Execution (PoX) for the correct/expected software in potentially compromised low-end MCUs. In practice, this capability can be leveraged to provide "integrity from birth" to sensor data, by binding the sensed results/outputs to an unforgeable cryptographic proof of execution of the expected sensing process. Despite this significant progress, current PoX schemes for low-end MCUs ignore the real-time needs of many applications. In particular, security of current PoX schemes precludes any interrupts during the execution being proved. We argue that lack of asynchronous capabilities (i.e., interrupts within PoX) can obscure PoX usefulness, as several applications require processing real-time and asynchronous events. To bridge this gap, we propose, implement, and evaluate an Architecture for Secure Asynchronous Processing in PoX (ASAP). ASAP is secure under full software compromise, enables asynchronous PoX, and incurs less hardware overhead than prior work.},
booktitle = {Proceedings of the 59th ACM/IEEE Design Automation Conference},
pages = {721–726},
numpages = {6},
location = {San Francisco, California},
series = {DAC '22}
}

@inproceedings{10.1145/3638884.3638953,
author = {Andryani, Nur Afny Catur and Oey, Endra and Laurent, Velix Arvino and Nasya, Alexandra and Husin, Husna Sarirah},
title = {Analysis of Sensing Matrix Design for Under-Sampling MRI},
year = {2024},
isbn = {9798400708909},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3638884.3638953},
doi = {10.1145/3638884.3638953},
abstract = {MRI currently is the most powerful medical diagnostic tomography system. It provides high resolution with high detail medical image. Its magnetization sensing is also free from radiation impact hence safe for the patient. However, the data acquisition process takes quite a long time with high-rate sampling. The sensing patient should stay still in the MRI sensing device for 20 to 40 minutes. It can affect claustrophobia for some patients. The high-rate sampling will also linearly affect the cost, which is considerably high. Hence, the research on enabling under-sampling MRI imaging has been raised. The main objective of under-sampling MRI Imaging is reducing the scanning time by under-sampling the data acquisition while at the same time the resulting qualified reconstructed image can be maintained. Compressive Sensing (CS) framework is one of the approaches that can be utilized on solving projection with less measurement. It can recover signals which have sparsity property. The signal is sparse if the signal being sensed has low information rate. Thus, the framework of Compressive Sensing matches under-sampling MRI Imaging. The sparsity requirement is closely related to the design of sensing matrix and dictionary on the Compressive Sensing framework. This paper presents analysis of two proposed sensing matrix designs for Under-sampling MRI Imaging: square sensing matrix and sorting-based sensing matrix designs. The proposed sensing matrix design is intended to appropriately sample the data measurement on certain sampling rate in frequency domain to maintain the quality of the reconstructed MRI image closely to the ground truth (full sampling MRI Imaging). The simulations show that both proposed sensing matrix designs are able to conduct under-sampling MRI Imaging for at least at 40% sampling rate with average of PSNR 27.72 and 33.07 respectively subject to the ground truth.},
booktitle = {Proceedings of the 2023 9th International Conference on Communication and Information Processing},
pages = {445–450},
numpages = {6},
keywords = {Compressive sensing, Under-sampling MRI, medical imaging, sensing matrix},
location = {Lingshui, China},
series = {ICCIP '23}
}

@inproceedings{10.1145/3581807.3581816,
author = {Zhu, Tianyu and Zhang, Xinfeng and Liu, Xiaomin and Li, Xiangsheng and Jia, Maoshen and Chang, Xiaoxia and Meng, Yuan},
