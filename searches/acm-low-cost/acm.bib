@article{10.1145/3749539,
author = {Wu, Tianhao and Wu, Yi and Poudel, Bibek and Meerza, Syed Irfan Ali and Athawale, Rajasi Gore and Li, Weizi and Gao, Zan and Karata\c{S}, \c{C}a\u{g}das and Liu, Jian},
title = {VibRun: Real-time Unobtrusive Gait Analysis for Treadmill Running via Footstep Vibrations},
