@inproceedings{10.1145/3759023.3759116,
author = {Steve, Mtsotso and Thapelo, Makhalanyane and Kobo, Hlabishi},
title = {Design, Implementation, and Testing of an NB-IoT Smart Sensor's Signal Processor for Industrial Applications},
year = {2025},
isbn = {9798400714276},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
