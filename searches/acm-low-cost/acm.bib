doi = {10.1145/3715335.3735469},
abstract = {Digital technologies, particularly Internet of Things (IoT) sensor networks, have the potential to improve coordination and decision-making in community-managed dam operations, especially in rural and decentralized water systems. Despite advancements in real-time sensing and data-driven management, barriers such as fragmented governance, limited data accessibility, and operational constraints continue to hinder effective coordination across watersheds. Semi-structured interviews with dam operators in the Huron River watershed (Michigan, USA) identified critical institutional, operational, and technological challenges, including regulatory constraints on dam operations, reliance on manual flow monitoring, and a lack of accessible forecasting tools. To address these challenges, a low-cost, IoT-based decision support tool was developed and tested, integrating real-time sensor data, hydrologic conditions, and ecological forecasting into a web-based application. Results indicate that intuitive, data-driven interfaces improve information sharing, enhance operator trust in automation, and support watershed-scale coordinated management. Findings suggest that scalable IoT networks, when combined with human-centered design, bridge the gap between data availability and actionable decision making, ultimately fostering more adaptive, coordinated water resource management.},
booktitle = {Proceedings of the 2025 ACM SIGCAS/SIGCHI Conference on Computing and Sustainable Societies},
pages = {245–260},
numpages = {16},
keywords = {Internet of Things, stormwater management, dams, decision support tools, climate change},
location = {
},
series = {COMPASS '25}
}

@inproceedings{10.1145/3581791.3596856,
