@inproceedings{10.1145/3703790.3703824,
author = {Comert, Mert and Ahmed, Arslan and Ahmed, Hafiz},
title = {Identifying Security Challenges in the Transition from Traditional to Smart Manufacturing Through IIoT Retrofitting},
