isbn = {9798400714023},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3733155.3734891},
doi = {10.1145/3733155.3734891},
abstract = {The measurement of bladder volume serves as an essential tool for urinary health management, especially among people with age-related bladder dysfunction or neurological bladder issues, or developmental bladder problems. Patients who have neurogenic bladder or limited mobility, or spinal cord injuries, need ongoing precise monitoring as a preventive measure against complications. Current solutions face challenges because they depend on operators and consume too much power while being inflexible. We present a wearable bladder monitoring (WBM) sensor with dual configurations: a 32-channel setup for Point-of-Care Ultrasound (POCUS) applications and an optimized 5-channel design for urinary incontinence (UI) management. The 5-channel configuration operates at low power while using A-mode imaging to measure bladder volume precisely through a simple hardware design that supports wearable implementation. The 32-channel configuration demonstrates its capability for advanced diagnostic uses by producing high-quality B-mode images through single-plane wave imaging while functioning as a proof-of-concept. The 5-channel WBM system demonstrates equivalent accuracy ((pm 5\%) to (6\%)) when measuring bladder volumes between 50 to 200 mL compared to the Verasonics platform while using much less power in in-vitro experiments with bladder phantoms. The 32-channel setup was tested for imaging quality metrics, including contrast and generalized contrast-to-noise ratio (gCNR) to demonstrate its potential for advanced imaging applications. The WBM platform combines wireless data transmission with flexibility and efficiency to create a versatile wearable ultrasound device platform for clinical and homecare environments.},
booktitle = {Proceedings of the 18th ACM International Conference on PErvasive Technologies Related to Assistive Environments},
pages = {265–272},
numpages = {8},
keywords = {wearable medical devices, bladder volume measurement, non-invasive monitoring, urinary incontinence management, and ultrasound image quality.},
location = {
},
series = {PETRA '25}
}

@inproceedings{10.1145/3733155.3736596,
author = {Zand, Manizheh and Wood, Sally and Davoudi, Fatemeh and Kyrarini, Maria},
title = {Cognitive Fatigue Assessment for Human-Robot Collaboration: Review \&amp; Open Challenges},
year = {2025},
isbn = {9798400714023},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3733155.3736596},
doi = {10.1145/3733155.3736596},
abstract = {As Human Robot Collaboration (HRC) technologies continue to advance, robots are increasingly being deployed to assist in various settings, including manufacturing, healthcare, and home environments. A critical aspect of designing safe and adaptable HRC systems is the ability to assess and monitor an individual’s Cognitive Fatigue (CF) during interactions with robots. This is especially important in ensuring safe and effective environments, as fluctuations in CF can affect both performance and safety. Although prior research has explored cognitive workload and fatigue, a significant gap exists in understanding how to effectively measure and manage CF in real-time during HRC. This paper reviews current technologies for CF assessment in HRC systems, examining self-reported assessments, cognitive activity induction, physiological sensors, and behavioral analysis. Furthermore, it investigates the safety and effectiveness of assistive robots in supporting individuals with Activities of Daily Living (ADL), highlighting key challenges in detecting and responding to CF. This paper can potentially guide future research on developing robotics for long-term care that focuses on enhancing human well-being and autonomy within HRC systems.},
booktitle = {Proceedings of the 18th ACM International Conference on PErvasive Technologies Related to Assistive Environments},
pages = {74–84},
numpages = {11},
keywords = {Human-Robot Collaboration, Cognitive Fatigue, Assistive Robotics, Activities of Daily Living},
location = {
},
series = {PETRA '25}
}

@inproceedings{10.1145/3733155.3737907,
author = {D'Avis, Noel and Faquiri, Silvia},
title = {Optimization and Validation of a 2D-LiDAR-Coverage Algortihm},
year = {2025},
isbn = {9798400714023},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3733155.3737907},
doi = {10.1145/3733155.3737907},
abstract = {The strategic placement of 2D-LiDAR (Light Detection and Ranging) sensors is critical for a wide range of applications in smart indoor environments, including security, fall detection, and elderly care monitoring. This paper introduces and validates a novel 2D-LiDAR coverage algorithm designed to address significant challenges such as blind spots and shadow minimization. By extending existing grid-based methodologies, the proposed algorithm incorporates multi-directional coverage requirements to ensure that each grid cell is reliably monitored from multiple perspectives. This enhancement reduces the likelihood of undetected areas and improves the overall resilience of the system to occlusions. Furthermore, the algorithm optimizes sensor placement to minimize hardware requirements while maintaining comprehensive spatial coverage. The algorithm’s performance is rigorously evaluated through both simulated and real-world experiments. The simulations modeled a typical and simple indoor environment with one large static obstacle to validate the effectiveness of the sensor placement strategy in achieving full coverage with minimal overlap. Real-world experiments, utilizing RPLidar A1M8 sensors, confirm the simulation results and demonstrate the practical feasibility of the algorithm in detecting and tracking movement throughout the test environment, including in regions prone to occlusions. These results emphasize the algorithm’s suitability for high-reliability applications such as fall detection in elderly care settings and continuous monitoring in smart environments. This work not only validates the practical applicability of the proposed approach but also provides a foundation for its adaptation to more complex scenarios, paving the way for advancements in sensor network design and deployment in diverse real-world contexts.},
booktitle = {Proceedings of the 18th ACM International Conference on PErvasive Technologies Related to Assistive Environments},
pages = {248–254},
numpages = {7},
keywords = {2D-LiDAR, Sensor Placement Optimization, Fall Detection, Indoor Monitoring, Shadow Minimization, Elderly Care Safety, Coverage Overlap, Real-world Validation, Smart Environment Monitoring},
location = {
},
series = {PETRA '25}
}

@inproceedings{10.1145/3733155.3733195,
author = {Fermitsch, Andreas and Fritz, Peter and Thomay, Christian and Gollan, Benedikt and Norden, Christian and Mangasser, Carsten},
