@article{10.1145/3725828,
author = {Meyer, Johannes and Zimmer, Alexander and Vilches, Sergio},
title = {Ambient Light Robust Eye-Tracking for Smart Glasses Using Laser Feedback Interferometry Sensors with Elongated Laser Beams},
year = {2025},
issue_date = {May 2025},
