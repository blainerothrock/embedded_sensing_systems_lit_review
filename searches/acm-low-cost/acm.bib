@inproceedings{10.1145/3549206.3549313,
author = {Goyal, Riya and Tomar, Abhinav},
title = {Optimal and Dynamic Scheduling using Multiple Mobile Chargers in Rechargeable Sensor Networks: An MADM-based Approach},
year = {2022},
isbn = {9781450396752},
