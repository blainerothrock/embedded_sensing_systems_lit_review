@inproceedings{10.1145/3765712.3765726,
author = {Phelippeau, Ana and Chaffangeon Caillet, Adrien and Husson, Adrien and Chevrier, Jo\"{e}l},
title = {Sensitive Pen: An Open-Source And Low-Cost Digital Pen For Diagnosing Children With Dysgraphia},
