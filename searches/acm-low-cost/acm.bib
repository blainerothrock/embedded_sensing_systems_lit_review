@inproceedings{10.1145/3719384.3719385,
author = {Nakfon, Pagamalueang and Nunkaew, Wuttinan},
title = {A Fuzzy Inference System-Based Multi-Criteria Inventory Classification with Three-Sigma Control Limits},
