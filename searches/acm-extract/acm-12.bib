@inproceedings{10.1145/3721888.3722091,
author = {Koreli\v{c}, Martin and Machidon, Octavian and Pejovi\'{c}, Veljko},
title = {SELLMA: Semantic Location through On-Device LLMs and WiFi Sensing},
