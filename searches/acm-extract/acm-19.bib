year = {2024},
isbn = {9798400718168},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3677404.3677406},
doi = {10.1145/3677404.3677406},
abstract = {With the advancement of communication technology, local user devices encounter computational inadequacy and real-time challenges when handling computationally intensive and latency-sensitive applications. To address this problem, this paper utilizes a UAV loaded with mobile edge devices as an airborne mobile base station to provide task offloading services. It proposes a deep reinforcement learning-based task offloading algorithm. First, the joint decision problem of UAV flight trajectory optimization and task offloading allocation in the task offloading system for UAV-assisted edge computing is modeled as a Markov decision process. The objectives include achieving system latency sensitivity, prioritizing UAV energy efficiency, and ensuring geo-service fairness for user devices. Secondly, considering that the problem is a non-convex optimization problem with multiple constraints, for the complexity of the solution process and the continuity of the prediction action, this paper adopts the TD3 (Twin Delayed Deep Deterministic Policy Gradient) algorithm to solve this complex problem. Simulation results demonstrate that the algorithm proposed in this paper can significantly decrease system latency and UAV energy consumption in a complex and variable system environment. It also enhances geographic fairness and offers a more efficient and equitable offloading service for user devices.},
booktitle = {Proceedings of the 2024 International Academic Conference on Edge Computing, Parallel and Distributed Computing},
pages = {9–14},
numpages = {6},
location = {Xi'an, China},
series = {ECPDC '24}
}

@inproceedings{10.1145/3664968.3665012,
author = {Uy, Jeremy Gabriel and San Juan, Jarvy Larz and Magno, Darlyn Jasmin},
title = {A Balanced Approach to Project Scheduling with Project Crashing for Time-Sensitive Projects},
