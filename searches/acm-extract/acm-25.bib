@article{10.1145/3617174,
author = {Huang, Qing and Yuan, Zhiqiang and Xing, Zhenchang and Peng, Xin and Xu, Xiwei and Lu, Qinghua},
title = {FQN Inference in Partial Code by Prompt-tuned Language Model of Code},
year = {2023},
issue_date = {February 2024},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
volume = {33},
number = {2},
issn = {1049-331X},
url = {https://doi.org/10.1145/3617174},
doi = {10.1145/3617174},
abstract = {Partial code usually involves non-fully-qualified type names (non-FQNs) and undeclared receiving objects. Resolving the FQNs of these non-FQN types and undeclared receiving objects (referred to as type inference) is the prerequisite to effective search and reuse of partial code. Existing dictionary-lookup based methods build a symbolic knowledge base of API names and code contexts, which involve significant compilation overhead and are sensitive to unseen API names and code context variations. In this article, we propose using a prompt-tuned code masked language model (MLM) as a neural knowledge base for type inference, called POME, which is lightweight and has minimal requirements on code compilation. Unlike the existing symbol name and context matching for type inference, POME infers the FQNs syntax and usage knowledge encapsulated in prompt-tuned code MLM through a colze-style fill-in-blank strategy. POME is integrated as a plug-in into web and integrated development environments (IDE) to assist developers in inferring FQNs in the real world. We systematically evaluate POME on a large amount of source code from GitHub and Stack Overflow, and explore its generalization and hybrid capability. The results validate the effectiveness of the POME design and its applicability for partial code type inference, and they can be easily extended to different programming languages (PL). POME can also be used to generate a PL-hybrid type inference model for providing a one-for-all solution. As the first of its kind, our neural type inference method opens the door to many innovative ways of using partial code.},
journal = {ACM Trans. Softw. Eng. Methodol.},
month = dec,
articleno = {31},
numpages = {32},
keywords = {neural knowledge base, code masked language model, fully qualified names, Type inference}
}

@inproceedings{10.1145/3627915.3627975,
author = {Zhang, Jenny and Li, Ding and Hu, Jiaqi},
title = {It's High Time to Turn Off the High Lights!},
year = {2023},
isbn = {9798400700590},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3627915.3627975},
doi = {10.1145/3627915.3627975},
abstract = {Light pollution, a brand-new form of pollution in contemporary culture, has had adverse impacts on both people and wildlife. It's time to pay attention to the level of light pollution! In order to better solve those problems in a rational way, a myriad of mathematical methods was applied in this study thoroughly to assess the risk level of light as well as to provide ways for interventions to reduce pollution in various areas.A comprehensive evaluation model based on TOPSIS Model was well developed. The components that contribute to light pollution, which were categorized into the natural factors, human society, and the environmental quality were identified. They were all subdivided into secondary indicators. On the network, data about Chinese cities were gathered and processed. After calculating each index's weight by using Entropy Weight Method, the TOPSIS Model to determine the comprehensive level of each region by the composite score index was applied. A K-means clustering model to divide all outcomes into nine groups while taking the hierarchy of risk levels into account was further utilized. Based on population density and geographical features, Chengdu, Xichong, Yulin, and Gaoli Gong Mountains in China as an urban community were picked for a suburban community, a rural community, and a protected land location, respectively. Principal Component Analysis (PCA) to identify the key variables that affected light pollution was also implemented. These three core variables were: daytime duration, number of bird species and residential electricity intensity. The solutions' efficacy by sensitivity analysis was reasonably assessed. For sensitivity analysis, the urban community and suburban community as the research subjects were selected, and Excel to adjust the values to the direction of optimization by 10\%, 20\%, and 30\%, respectively, were used. We finally came to the result: promotion of green buildings is most effective for both regions.Such a myriad of model could be applied to more occasions. This is an innovative and constructive evaluation method, which can be widely used in various evaluation problems in the future and help make contributions to various fields such as environment and humanity.},
booktitle = {Proceedings of the 7th International Conference on Computer Science and Application Engineering},
articleno = {23},
numpages = {11},
keywords = {Entropy Weight Method, Green buildings, Light pollution, PCA, TOPSIS Model},
location = {Virtual Event, China},
series = {CSAE '23}
}

@inproceedings{10.1145/3620679.3620692,
