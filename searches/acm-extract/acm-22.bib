@inproceedings{10.1145/3647444.3652483,
author = {Jha, Khyati and Pasbola, Mansi and Rai, Hari Mohan and Amanzholova, Saule},
title = {Utilizing Smartwatches and Deep Learning Models for Enhanced Avalanche Victim Identification, Localization, and Efficient Recovery Strategies: An In-depth Study},
year = {2024},
isbn = {9798400709418},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3647444.3652483},
doi = {10.1145/3647444.3652483},
abstract = {This article explores the transformative impact of modern technology on avalanche response and safety, addressing the longstanding challenges associated with avalanches in mountainous regions. Historically, avalanches have presented significant dangers, compounded by the difficulties of conducting rescue operations in remote and harsh environments. However, recent technological advancements, including smartwatches with SOS features and specialized mobile applications, have ushered in a new era of avalanche safety. Smartwatches have emerged as crucial tools in avalanche safety. Equipped with SOS features and synchronized with mobile apps, these devices have revolutionized the way we approach avalanche emergencies. In this study, we propose a methodology that leverages smartwatch data and deep learning models to detect individuals buried under avalanche debris. This approach aims to significantly improve the chances of successful and timely rescue operations. The proposed methodology involves collecting data from smartwatches, which are equipped with various sensors to monitor location, movement, and environmental conditions. Deep learning models are then deployed to analyze this data, identifying patterns and anomalies associated with avalanche incidents. By harnessing these advanced technologies, our methodology offers the potential for real-time avalanche detection, thereby enhancing overall safety outcomes. One of the key strengths of this methodology is its adaptability to diverse avalanche scenarios. The study envisions a future where technology-driven avalanche safety becomes an integral component of outdoor activities, mitigating risks and enabling more effective response strategies in the face of this natural hazard.},
booktitle = {Proceedings of the 5th International Conference on Information Management \&amp; Machine Intelligence},
articleno = {176},
numpages = {5},
keywords = {Avalanche Beacons, Avalanche Response, Avalanche Safety, Mobile Apps, Radar Technology, SOS Features, Smartwatches, Victim Location},
