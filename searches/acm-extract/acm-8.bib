year = {2025},
isbn = {9798400714023},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3733155.3733195},
doi = {10.1145/3733155.3733195},
abstract = {In this paper we present a data-driven Competency Based Training and Assessment (CBTA)-assistance system for estimation of competency grades during simulator training of pilots. Its core module is a behavioral analysis framework, that estimates performance metrics from observations of pilot trainee behavior in an XR training simulation environment. For the realization of CBTA, dependable quantifiable and context-aware information of the trainee’s behavior is essential. We extract information of flight state and pilot-machine interaction from the simulator software, we model the 3-D scene of the cockpit environment and incorporate the trainee’s gaze information from the eye tracking technology and the head pose using 3-D tracking from a Varjo XR3 headset, which is part of the flight simulator. With this information we achieve a deep temporal and spatial understanding of interaction, behavior and visual attention of the pilot. Our behavioral analysis framework models the pilot’s behavior from observations using somatic indicators and sensors and deducts competency skill levels of the pilot, following the CBTA guidelines of the European Union Aviation Safety Agency (EASA). With our work we contribute an assistive system for pilots and flight training instructors, aiming to complement and improve assessment of training performance, providing additional information.},
booktitle = {Proceedings of the 18th ACM International Conference on PErvasive Technologies Related to Assistive Environments},
pages = {222–229},
numpages = {8},
keywords = {competency-based pilot training and assessment, human computer interaction, behavior modeling, eye tracking, visual attention},
location = {
},
series = {PETRA '25}
}

@inproceedings{10.1145/3733155.3736594,
author = {Doukaga, Habba'S Ngodjou and B\'{e}langer, Yan and Fortin, Pascal and Maitre, Julien and Bouchard, Bruno},
title = {Enhancing Photoplethysmography-Based Fine-Grained Hand Gesture Detection for Assistive Technologies Supporting Autonomy},
year = {2025},
isbn = {9798400714023},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3733155.3736594},
doi = {10.1145/3733155.3736594},
abstract = {The growing aging population, combined with a shortage of healthcare personnel, poses a critical challenge in many developed nations. Maintaining older adults in their homes has become an essential priority to address this issue. Smart homes are emerging as a viable solution, offering continuous monitoring of daily activities and timely assistance when required. While most research has centered on tracking broad activities such as eating, walking, or sleeping, detecting errors in task execution demands a system capable of identifying fine-grained steps in real-time. To tackle this challenge, we introduced an innovative algorithmic method for fine-grained gesture recognition last year, leveraging photoplethysmography sensors. Although our initial results demonstrated the potential of this approach, they were limited in scope. In this paper, we present a comprehensive new study using a more rigorous experimental protocol. This includes collecting much more precise data from the two hands instead of one, taking into account the wristband tension, the skin color that affect the rate sensing accuracy, and testing various machine learning techniques on a new dataset collected through a wristband equipped with an accelerometer and photoplethysmography sensors. The new dataset, comprising labeled atomic cooking gestures performed by participants, has been made publicly available for the scientific community. Our updated experiments achieved an promising accuracy of 94\%, further highlighting the untapped potential of photoplethysmography sensors in smart home applications for assistive activity recognition, an area where their use remains largely unexplored.},
booktitle = {Proceedings of the 18th ACM International Conference on PErvasive Technologies Related to Assistive Environments},
pages = {182–189},
numpages = {8},
keywords = {Assistive technology, Fine-Grained Activity Recognition, Hand Gesture Recognition, Cooking Gestures, Wearable Sensors, Photoplethysmography (PPG), Accelerometer (ACC)},
location = {
},
series = {PETRA '25}
}

