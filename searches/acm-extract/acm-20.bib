@inproceedings{10.1145/3643834.3661617,
author = {Homewood, Sarah and Okholm Just, Kari and Bramm Johansson, Olivia},
title = {The Unanticipated Use of Fitness Tracking Technologies During Post-COVID Syndrome},
year = {2024},
isbn = {9798400705830},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
