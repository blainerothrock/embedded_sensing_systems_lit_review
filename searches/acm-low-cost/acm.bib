@article{10.1145/3559767,
author = {Nikolaidis, Konstantinos and Kristiansen, Stein and Plagemann, Thomas and Goebel, Vera and Liest\o{}l, Knut and Kankanhalli, Mohan and Traaen, Gunn-Marit and \O{}verland, Britt and Akre, Harriet and Aaker\o{}y, Lars and Steinshamn, Sigurd},
title = {My Health Sensor, My Classifier – Adapting a Trained Classifier to Unlabeled End-User Data},
