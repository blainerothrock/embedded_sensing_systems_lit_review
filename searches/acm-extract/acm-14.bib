year = {2025},
isbn = {9798400711855},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3705618.3705642},
doi = {10.1145/3705618.3705642},
abstract = {As urbanization accelerates, The urban heat island effect (UHI) has become a significant global environmental issue, exerting a considerable impact on the ecological stability of urban areas and the living circumstances of their inhabitants. Urban green space (UGS), serving as a valuable strategy to alleviate the UHI, has garnered significant attention. With the aim of further explore the existing situation of research and prospective directions of UGS and the UHI effect in China, based on the CNKI database, this study used CiteSpace 6.3.1 software to conduct co-occurrence, hotspots, clustering, and burstiness analyses on the literature data of UGS and UHI effect in the past 30 years from the perspectives of publication trends, cooperation networks, burst term detection, and keyword analysis. The findings indicate that: (1) The volume of publications on UGS and the UHI effect has generally shown an upward trend. At the nodes of the promulgation of national policies, the number of publications has increased significantly, but the upward trend is not stable, and it may decline after 2024. (2) The research hotspots mainly focus on planning UGS to mitigate the UHI effect, reducing surface temperature, and remote sensing image research methods. (3) The UGS and UHI effect will have more extensive exploration and research space in the future.},
booktitle = {Proceedings of the 2024 International Conference on Digital Economy and Computer Science},
pages = {140–145},
numpages = {6},
keywords = {Bibliometrics, Urban Heat island effect, Urban green space, Visual analysis},
location = {
},
series = {DECS '24}
}

@inproceedings{10.1145/3696409.3700204,
author = {Chen, Jiaqi and Yang, Yan and Deng, Shizhuo and Teng, Da and Pan, Liyuan},
title = {SpikMamba: When SNN meets Mamba in Event-based Human Action Recognition},
