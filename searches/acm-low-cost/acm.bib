@inproceedings{10.1145/3716368.3735243,
author = {Morsali, Mehrdad and Najafi, Deniz and Shafiee, Amin and Tabrizchi, Sepehr and Mercati, Pietro and Imani, Mohsen and Roohi, Arman and Khoshavi, Navid and Nikdast, Mahdi and Angizi, Shaahin},
