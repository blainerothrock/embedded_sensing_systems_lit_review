@inproceedings{10.1145/3715071.3750405,
author = {Mahmoodi, Kian and Xie, Yudong and Gemicioglu, Tan and Lee, Chi-Jung and Kim, Jiwan and Zhang, Cheng},
title = {EchoForce: Continuous Grip Force Estimation from Skin Deformation Using Active Acoustic Sensing on a Wristband},
