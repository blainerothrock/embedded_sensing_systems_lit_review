@inproceedings{10.1145/3630138.3630142,
author = {Pan, Zhongliang and Hu, Yingkun and Wang, Hongji and Qiu, Jiahao},
title = {Hardware Circuit Design of Multifunctional Intelligent Table Lamp Based on STM32},
year = {2024},
isbn = {9781450399951},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3630138.3630142},
doi = {10.1145/3630138.3630142},
abstract = {According to the survey, the incidence rate of myopia and long-term poor sitting posture among young people lead to a rapid rise in the phenomenon of stooping. Based on this, a multifunctional intelligent desk lamp based on STM32 has been designed,The hardware system can be divided into two parts: the main body of the desk lamp and the low head detection grating on both sides. The main peripheral circuits include a light sensor circuit, button input ADC, Bluetooth circuit, audio circuit, battery residual voltage detection circuit, battery charging state detection, serial port debugging circuit, thermal infrared human body detection circuit, SW download interface, white and warm light PWM adjustment, temperature and humidity detection, OLED display IIC interface circuit, NRF wireless communication circuit Power circuit, etc., and corresponding programs for STM32 and WeChat mini programs were designed. The debugging results indicate that the temperature and humidity module continuously collects the temperature and humidity of the surrounding environment and automatically adjusts the color temperature of the light. The photosensitive sensor collects the light intensity of the surrounding environment, thereby automatically adjusting the brightness of the light. The human body sensor detects that there is no one around the desk lamp, and if there is no one around, the lamp will automatically turn off. The four buttons include switch buttons for mode selection, low head detection gear selection, white light brightness selection, and warm light brightness selection. Set four levels of low head detection alarm thresholds, namely 20cm, 25cm, 30cm, and 35cm. When a person's head falls below the selected alarm threshold, the desk lamp emits a voice reminder. If the person still lowers their head after the set time, the lamp will automatically turn off. The OLED screen displays the current mode, brightness value, temperature, humidity, and time information of the desk lamp. After connecting to Bluetooth, the mobile WeChat mini program synchronously displays and adjusts data such as brightness, color temperature, desk lamp mode, and ambient temperature and humidity. This intelligent desk lamp can provide users with a suitable brightness and color temperature, and is a multifunctional intelligent desk lamp for correcting improper sitting posture.},
booktitle = {Proceedings of the 2023 International Conference on Power, Communication, Computing and Networking Technologies},
articleno = {4},
numpages = {10},
keywords = {Bluetooth connectivity, Correction of sitting posture, NRF wireless communication, PWM regulation},
location = {Wuhan, China},
series = {PCCNT '23}
}

@article{10.1145/3640339,
author = {Haseeb, Khalid and Ahmad, Irshad and Siraj, Mohammad and Abbas, Naveed and Jeon, Gwanggil},
title = {Multi-Criteria Decision-Making Framework with Fuzzy Queries for Multimedia Data Fusion},
year = {2024},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
issn = {2375-4699},
url = {https://doi.org/10.1145/3640339},
doi = {10.1145/3640339},
abstract = {Multimedia Internet of Things (MIoT) is widely explored in many smart applications for connectivity with wireless communication. Such networks are not like ordinary networks because it has to collect a massive amount of data and are further forwarded to processing systems. As MIoT is very limited in terms of resources for healthcare, smart homes, etc., therefore, energy efficiency with reliable data transmission is a significant research challenge. As smart applications rely on bounded constraints, therefore duplicate and unnecessary data transmission should be minimized. In addition, the timely delivery of data in crucial circumstances has a significant impact on any proposed system. Consequently, this paper presents a fuzzy logic-based edge computing framework to provide cooperative decision-making while avoiding inefficient use of the sensing power of smart devices. The proposed framework can be applied to critical applications to improve response time and processing cost. It consists of the following two functional components: Firstly, it provides the automated routing process with a natural language interface at the sink node. Secondly, to ensure reasonable performance, it also transmits semantic data between sensors using fuzzy queries and security. According to the performance evaluation, the proposed framework significantly outperformed related studies in terms of energy consumption, packet overhead, network throughput, and end-to-end delay.},
note = {Just Accepted},
journal = {ACM Trans. Asian Low-Resour. Lang. Inf. Process.},
month = jan,
keywords = {critical systems, semantic analysis, natural language processing, fuzzy system, multimedia network}
}

