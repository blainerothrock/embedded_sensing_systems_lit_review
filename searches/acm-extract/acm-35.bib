@inproceedings{10.1145/3571306.3571441,
author = {Ghosh, Srinjoy and Mandal, Ratna},
title = {Context Aware City Air Quality Monitoring Estimation},
year = {2023},
isbn = {9781450397964},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3571306.3571441},
doi = {10.1145/3571306.3571441},
abstract = {“Save the environment for the people by the people”Plethora of works have been carried out with meteorological data like humidity, temperature, barometer pressure, wind speed, and weather conditions, which can be mined from different web sources. Air quality data, such as the concentration of PM2.5, NO2, and SO2, can be obtained from air quality monitoring stations. Presence of some gasses like CO2 and CO can even be detected by portable sensors. Air quality is represented by an Air Quality Index (AQI) and a category, for example, good, average, and unhealthy. Urban air quality varies significantly by location and changes tremendously over time due to the impact of multiple factors such as traffic flow, land usage, population density, huge industrialization and rapid urbanization. As a consequence, a) limited number of monitoring stations cannot reveal the fine-grained air quality throughout a city. b) inadequate environment information in suburban cities and rural zones is not enough c) system fails to capture the proper reasons for poor air quality, c) extraction of raw environment data is difficult for further development of any application. Straightway collection of real-time air quality data and continuous monitoring of environment is challenging for low economic countries. Therefore our objective is to generate the air profile of city road segments based on the actual demographic context of the city zones and developing a system which enables collection of raw sensor information from smartphone users and to identify the actual context of the location. Using the multi-modal information CityAirProfile, identifies a set of granular contextual features that allow the system to differentiate among the different air quality types. A thorough analysis of city context using the collected in-house dataset indicates that the system works with high accuracy in identifying different city zones like regular crowded area, commercial area or traffic congestion where air quality varies significantly. Therefore, we have identified the subjective city factors and analyzed the ambient city features like traffic flow, population density, demographic characteristics, load of vehicles on road, plantation type and road geometry which have high impact on the air quality. These features will be useful to develop the air profile for a particular city zone. We have classified the air profile of a city zone based on these subjective features. This city air profile will be useful to develop any kind of environment-aware utility services for people of low and poor economic countries.},
booktitle = {Proceedings of the 24th International Conference on Distributed Computing and Networking},
pages = {390–395},
numpages = {6},
keywords = {Air Quality, Context Sensing, Crowd sourcing, Environment},
location = {Kharagpur, India},
series = {ICDCN '23}
}

@article{10.1145/3554923,
author = {Chen, Yu-Chia and Jhong, Sin-Ye and Hsia, Chih-Hsien},
title = {Roadside Unit-based Unknown Object Detection in Adverse Weather Conditions for Smart Internet of Vehicles},
year = {2023},
issue_date = {December 2022},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
volume = {13},
number = {4},
issn = {2158-656X},
url = {https://doi.org/10.1145/3554923},
doi = {10.1145/3554923},
abstract = {For Internet of Vehicles applications, reliable autonomous driving systems usually perform the majority of their computations on the cloud due to the limited computing power of edge devices. The communication delay between cloud platforms and edge devices, however, can cause dangerous consequences, particularly for latency-sensitive object detection tasks. Object detection tasks are also vulnerable to significantly degraded model performance caused by unknown objects, which creates unsafe driving conditions. To address these problems, this study develops an orchestrated system that allows real-time object detection and incrementally learns unknown objects in a complex and dynamic environment. A you-only-look-once–based object detection model in edge computing mode uses thermal images to detect objects accurately in poor lighting conditions. In addition, an attention mechanism improves the system’s performance without significantly increasing model complexity. An unknown object detector automatically classifies and labels unknown objects without direct supervision on edge devices, while a roadside unit (RSU)-based mechanism is developed to update classes and ensure a secure driving experience for autonomous vehicles. Moreover, the interactions between edge devices, RSU servers, and the cloud are designed to allow efficient collaboration. The experimental results indicate that the proposed system learns uncategorized objects dynamically and detects instances accurately.},
journal = {ACM Trans. Manage. Inf. Syst.},
month = jan,
articleno = {47},
numpages = {21},
keywords = {Internet of vehicles, thermal infrared images, unknown object detection, attention mechanism, deep neural network, roadside unit (RSU), cloud computing}
}

@inproceedings{10.1145/3568444.3568458,
author = {Yaghoubisharif, Negin and Getschmann, Christopher and Echtler, Florian},
title = {HeadsUp: Mobile Collision Warnings through Ultrasound Doppler Sensing},
year = {2022},
isbn = {9781450398206},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3568444.3568458},
doi = {10.1145/3568444.3568458},
abstract = {Smartphone-using pedestrians are often distracted, leading to frequent accidents of varying severity with a risk of both awkwardness and injury. We introduce HeadsUp, a mobile app designed to warn the user of imminent collisions with solid obstacles. HeadsUp runs on unmodified commodity smartphones without additional hardware and uses active ultrasound sensing based on the Doppler effect. We contribute an analysis of the ultrasound audio characteristics of six different smartphone models to verify the feasibility of our approach across vendors and device classes, and a description of two implementation variants of our signal processing pipeline. We evaluate our system both in a lab environment and under real-world conditions, and we conclude that HeadsUp can effectively work at a range of up to 3 meters, even though overall performance is heavily dependent on both the individual user and the environment characteristics.},
booktitle = {Proceedings of the 21st International Conference on Mobile and Ubiquitous Multimedia},
pages = {200–207},
numpages = {8},
keywords = {Doppler, collision warning, environment, sensing, smartphones, ultrasound},
location = {Lisbon, Portugal},
series = {MUM '22}
}

@article{10.1145/3578484.3578492,
author = {Ossi, Federico and Hachem, Fatima and Cagnacci, Francesca and Dem\v{s}ar, Ur\v{s}ka and Damiani, Maria Luisa},
title = {HaniMob 2021 Workshop Report: The 1st ACM SIGSPATIAL Workshop on Animal Movement Ecology and Human Mobility},
