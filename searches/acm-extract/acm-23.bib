@inproceedings{10.1145/3653081.3653213,
author = {Chen, Shanhu and Li, Danchun and Liu, Junneng and Wei, Runkai},
title = {Raspberry Pi based intelligent greenhouse Internet of Things platform},
year = {2024},
isbn = {9798400716485},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3653081.3653213},
doi = {10.1145/3653081.3653213},
abstract = {With the development of smart agriculture, realizing accurate monitoring and management of greenhouse agriculture environment becomes the key to improve the efficiency and quality of agricultural production. This study aims to develop a Raspberry Pi based intelligent greenhouse IoT platform to enhance the automation and intelligence of greenhouse agriculture. This platform utilizes Raspberry Pi as the core controller, integrates multiple environmental sensors for real-time data acquisition, such as temperature and humidity, light intensity, etc., and optimizes the accuracy of the data through Kalman filtering algorithm. The Raspberry Pi also assumes the function of an IoT gateway to securely and efficiently transmit data to the cloud for remote storage and processing. In addition, this study also developed the supporting mobile APP and computer client software to provide users with an intuitive interface for data monitoring and remote control. In terms of energy management, by applying the BBPSO algorithm to optimize the angle of solar panels, this platform effectively improves the energy utilization efficiency and guarantees the sustainable operation of the system. The results of this study not only improve the management efficiency and crop production quality of greenhouse agriculture, but also provide a useful reference for the future technological development of smart agriculture.},
booktitle = {Proceedings of the 2023 5th International Conference on Internet of Things, Automation and Artificial Intelligence},
pages = {787–791},
numpages = {5},
location = {Nanchang, China},
series = {IoTAAI '23}
