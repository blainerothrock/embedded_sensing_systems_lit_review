abstract = {As artificial intelligence technology continues to advance, the application of robots in the medical field is rapidly expanding. Clinical data and market statistics indicate that medical robots, renowned for their high precision and other notable advantages, greatly enhance medical outcomes and improve patient treatment experiences. This paper aims to develop and optimize a specific type of micro-robot designed for targeted drug delivery, focusing on the design and implementation of a magnetically controlled ciliary motion propulsion mechanism. This mechanism enables precise control of the micro-robot's trajectory through external magnetic fields, allowing it to navigate effectively within complex vascular systems. The study explores the selection of biocompatible materials and the development of an adaptive control algorithm to regulate the robot's movement with high precision. Additionally, a real-time imaging system is integrated to provide accurate positional information and optimize drug release timing. In vitro simulations demonstrate that the micro-robot can achieve precise localization in target areas, with a 25\% increase in targeting efficiency and a 15\% improvement in timing control accuracy compared to traditional methods. Further optimization of magnetic field distribution and control algorithms enhances the robot's adaptability and stability in complex vascular environments. The paper also discusses future directions, including the integration of multi-modal sensors and more intelligent drug release mechanisms, highlighting the potential to expand the application of micro-robots in targeted drug delivery and contribute to the advancement of medical robotics.},
booktitle = {Proceedings of the 2024 5th International Symposium on Artificial Intelligence for Medicine Science},
pages = {84–89},
numpages = {6},
keywords = {CAM Structure, Computational Fluid Dynamics (CFD), Targeted Drug Delivery Micro-Robot},
location = {
},
series = {ISAIMS '24}
}

