@inproceedings{10.1145/3764727.3764739,
author = {Liu, Yitong and Pu, Tingxu},
title = {A Day-ahead Electricity Price Prediction Method Based on Deep Learning Multiple Neural Networks Fusion with Modal Decomposition and Reconstruction},
year = {2025},
isbn = {9798400714955},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3764727.3764739},
doi = {10.1145/3764727.3764739},
abstract = {Accurate day-ahead electricity price prediction is fundamental for power market operations and policy formulation, where publicly available market data and meteorological factors are critical inputs. To fully leverage these heterogeneous features and address the varying contributions of distinct factors, this study proposes a novel electricity price prediction framework that integrates modal decomposition, reconstruction, and deep learning-based multiple neural network fusion. First, the ReliefF algorithm is employed to identify sensitive features by quantifying the relevance of market and meteorological variables to price fluctuations. Subsequently, the Complete Ensemble Empirical Mode Decomposition with Adaptive Noise (CEEMDAN) was applied to decompose historical sequences into intrinsic mode functions (IMFs). Second, the sample entropy of each IMF was calculated, followed by K-means clustering to categorize the IMFs into three classes: high-, medium-, and low-frequency components. The high-frequency components are further decomposed using Variational Mode Decomposition (VMD) to enhance feature granularity, and all processed subcomponents are reconstructed. Finally, each reconstructed subcomponent was independently fed into a hybrid model combining Convolutional Neural Networks (CNN), Long Short-Term Memory (LSTM) networks, and attention mechanisms for individualized temporal modeling. Validated on the Danish electricity market dataset, the experimental results demonstrate superior performance: the proposed method achieves prediction accuracies exceeding 92% across all seasons, with a peak accuracy of 96.868%. This study provides a reliable solution for electricity price forecasting in modern power markets characterized by increasing renewable integration.},
booktitle = {Proceedings of the 2025 International Conference on Artificial Intelligence and Digital Finance},
pages = {69–75},
numpages = {7},
keywords = {Electricity market, Electricity price forecasting, ReliefF feature selection, modal decomposition and reconstruction, neural network fusion},
location = {
},
series = {AIDF '25}
}

@article{10.1145/3639825,
author = {Fan, Boyu and Su, Xiang and Tarkoma, Sasu and Hui, Pan},
title = {Behave Differently when Clustering: A Semi-asynchronous Federated Learning Approach for IoT},
year = {2024},
issue_date = {May 2024},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
volume = {20},
number = {3},
issn = {1550-4859},
url = {https://doi.org/10.1145/3639825},
doi = {10.1145/3639825},
abstract = {The Internet of Things (IoT) has revolutionized the connectivity of diverse sensing devices, generating an enormous volume of data. However, applying machine learning algorithms to sensing devices presents substantial challenges due to resource constraints and privacy concerns. Federated learning (FL) emerges as a promising solution allowing for training models in a distributed manner while preserving data privacy on client devices. We contribute SAFI, a semi-asynchronous FL approach based on clustering to achieve a novel in-cluster synchronous and out-cluster asynchronous FL training mode. Specifically, we propose a three-tier architecture to enable IoT data processing on edge devices and design a clustering selection module to effectively group heterogeneous edge devices based on their processing capacities. The performance of SAFI has been extensively evaluated through experiments conducted on a real-world testbed. As the heterogeneity of edge devices increases, SAFI surpasses the baselines in terms of the convergence time, achieving a speedup of approximately \texttimes{} 3 when the heterogeneity ratio is 7:1. Moreover, SAFI demonstrates favorable performance in non-independent and identically distributed settings and requires lower communication cost compared to FedAsync. Notably, SAFI is the first Java-implemented FL approach and holds significant promise to serve as an efficient FL algorithm in IoT environments.},
journal = {ACM Trans. Sen. Netw.},
month = feb,
articleno = {51},
numpages = {28},
keywords = {Federated learning, smart sensing, edge computing, deep learning}
}

@inproceedings{10.1145/3544793.3560391,
author = {Liu, Mengxi and Suh, Sungho and Zhou, Bo and Gruenerbl, Agnes and Lukowicz, Paul},
title = {Smart-Badge: A wearable badge with multi-modal sensors for kitchen activity recognition},
