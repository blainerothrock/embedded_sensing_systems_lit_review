@inproceedings{10.1145/3653081.3653150,
author = {Wang, Mengxin and Ma, Xingyu and Yu, Hongchen and Liu, Yijian and Chen, Da},
title = {Electro-sensory skin for physiological signal detection and object recognition},
year = {2024},
isbn = {9798400716485},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3653081.3653150},
doi = {10.1145/3653081.3653150},
abstract = {The emergence of flexible multifunctional sensing devices has attracted extensive attention from researchers in the field of wearable devices and artificial intelligence. However, the current multifunctional flexible electronic devices, with low stability and complicated fabrication process, are the key constraints to their wide application. Laser-induced graphene patterned rectangular array sensors prepared by carbonizing polyimide films are highly sensitive to external strain and pressure stimuli. With outstanding mechanical properties and heightened sensitivity, the structured pressure sensor effectively showcases its capacity to detect a broad spectrum of human activities and subtle touches. The sensor adopts a three-layered structure comprising a flexible substrate layer, a conductive sensing layer, and an encapsulation layer. Polydimethylsiloxane (PDMS) is employed as the material for both the substrate and encapsulation layers, while laser-induced graphene (LIG) serves as the material for the conductive layer. The resulting patterned pressure sensor exhibits notable sensitivity, with a value of 1.63 kPa-1 within the pressure range of 0 to 40 kPa and 3.5 kPa-1 within the pressure range of 40 to 120 kPa. Furthermore, cyclic load-unload assessments demonstrated the remarkable stability of the sensor. Undergoing compression for 3,000 cycles at a pressure of 60 kPa, the sensor maintained its capability for stable signal detection. In applications such as slide recognition and object grip recognition, the pressure sensor exhibited a noteworthy level of resolution. At the same time, the sensor additionally possesses the capability to monitor human health, and is capable of sensing large body movements and micro-motion sensing signals. Therefore, the sensor can be used for detecting external forces and grasping objects, and has great potential for development in robotics, artificial intelligence, and human-computer interaction.},
booktitle = {Proceedings of the 2023 5th International Conference on Internet of Things, Automation and Artificial Intelligence},
pages = {415–421},
numpages = {7},
location = {Nanchang, China},
series = {IoTAAI '23}
}

@inproceedings{10.1145/3653081.3653085,
author = {Meng, Xiandong and Zhang, Tingting and Wang, Qixuan and Liao, Minghao and Sun, Yongjian},
