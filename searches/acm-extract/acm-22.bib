}

@inproceedings{10.1145/3613904.3642295,
author = {Brombacher, Hans and Dritsa, Dimitra and Vos, Steven and Houben, Steven},
title = {"To Click or not to Click": Back to Basic for Experience Sampling for Office Well-being in Shared Office Spaces},
