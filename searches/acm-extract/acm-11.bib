@inproceedings{10.1145/3724154.3724234,
author = {Li, Zixiang and Qian, Ying},
title = {Attention-Enhanced Temporal Convolutional Network with Gating Mechanism for Tourism Forecasting},
year = {2025},
isbn = {9798400711862},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3724154.3724234},
doi = {10.1145/3724154.3724234},
abstract = {Accurate prediction of tourist numbers is very important for resource management, service quality improvement, and sustainable tourism development. Understanding tourist flow in advance can optimize economic benefits, reduce environmental pressure, and improve tourist satisfaction. However, the high complexity of tourism data, with significant time dependence and nonlinear dynamic characteristics, poses a great challenge to traditional forecasting methods. To this end, this paper proposes a forecasting framework that combines multiple mechanisms. The framework captures short-term and long-term dependence through time convolution filter, accurately models highly volatile patterns, and adopts Gated Recurrent Unit (GRU) to maintain the state of key information and improve the sensitivity of the model to dynamic changes. In addition, the self-attention mechanism learns global dependence and allocates attention in long time series, thus improving prediction accuracy and generalization ability. This hierarchical modeling strategy enhances the ability of the model to deal with non-stationary data and better captures complex interactions. Ultimately, the framework provides reliable support for strategic decision-making and lays a solid foundation for promoting the sustainable development of regional tourism.},
booktitle = {Proceedings of the 2024 5th International Conference on Big Data Economy and Information Management},
pages = {485–490},
numpages = {6},
keywords = {Deep Learning, Tourism, Traditional forecasting},
location = {
},
series = {BDEIM '24}
}

@inproceedings{10.1145/3723366.3723385,
author = {Jiang, Zikang and Sung, Jinghui and Zhuang, Yixin and Fang, Wenzheng and Chen, Ting-Yu and Huang, Yuanpeng},
title = {A Study on the Causal Relationships Between Blood Protein Ratios and Hepatobiliary Cancers Based on Mendelian Randomization Models},
year = {2025},
isbn = {9798400718298},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3723366.3723385},
doi = {10.1145/3723366.3723385},
abstract = {Objectives: Hepatobiliary cancers, encompassing hepatocellular carcinoma (HCC) as well as malignancies of the biliary tract and gallbladder, represent a major health burden due to their frequent late-stage detection and the scarcity of effective treatment options. This research employs Mendelian randomization (MR) to explore the causal links between specific blood protein ratios and the development of hepatobiliary cancers. Methods: A two-sample MR approach was applied, using genetic variants as instrumental variables to assess causal relationships. Blood protein ratio data for the genome-wide association study (GWAS) were derived from the UK Biobank, and outcome data for hepatobiliary cancers were obtained from the Finnish R11 database. To enhance the reliability of causal inference, five MR methods, including Inverse Variance Weighted (IVW) and MR-Egger, were applied. Furthermore, sensitivity analyses were carried out to address and minimize the influence of pleiotropy and heterogeneity. Results: MR analysis identified several significant causal relationships. Protective protein ratios for biliary tract and gallbladder malignancies included CD300E/CLEC6A (OR=0.71, 95\% CI: 0.60-0.84), CD300E/CXCL10 (OR=0.63, 95\% CI: 0.50-0.80), and CD300E/TNFRSF1B (OR=0.79, 95\% CI: 0.70-0.89). For HCC, protective ratios included BSG/CKAP4 (OR=0.70, 95\% CI: 0.58-0.84) and FCRL2/LY9 (OR=0.63, 95\% CI: 0.50-0.78). Risk factors for HCC included CD79B/FCRL2 (OR=1.54, 95\% CI: 1.23-1.94), DAPP1/MGMT (OR=1.65, 95\% CI: 1.27-2.16), and EPHB4/EPHB6 (OR=1.92, 95\% CI: 1.37-2.68). The robustness of the findings was confirmed through sensitivity analyses, which showed no indications of horizontal pleiotropy or significant heterogeneity. Conclusion: This study elucidates the causal impact of specific blood protein ratios on hepatobiliary cancers, highlighting potential biomarkers for early detection and therapeutic targets. These findings contribute to a deeper understanding of the molecular mechanisms driving hepatobiliary cancers and provide a foundation for further research to validate these results and investigate the underlying pathways.},
booktitle = {Proceedings of the 2024 4th International Symposium on Big Data and Artificial Intelligence},
pages = {121–128},
numpages = {8},
keywords = {Big Data, Biliary Tract Cancer, Blood Protein Ratios, Gallbladder Malignancies, Hepatocellular Carcinoma, Mendelian Randomization},
location = {
},
series = {ISBDAI '24}
}

@inproceedings{10.1145/3723936.3723995,
author = {Sun, Shunjie and Tan, Rong and Tong, Yi and Mo, Shinan and Huang, Qirui and Hu, Kang},
title = {Research on Training Quantity and Sports Performance Based on LSTM Model: A Case Study of Marathon Sports},
year = {2025},
isbn = {9798400712234},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3723936.3723995},
doi = {10.1145/3723936.3723995},
abstract = {With the increasing awareness of national health, the number of marathon events in China is constantly increasing, and the number of amateur marathon enthusiasts is also growing exponentially. However, they have not received professional training and have a certain pursuit of competition results. In daily training, they are prone to low training efficiency due to unreasonable training plans. This article mainly analyzes the relationship between training volume and sports performance by establishing a mathematical model, in order to develop efficient training plans for marathon enthusiasts and help them achieve better competition results. This article constructs a stationary time series model by visualizing and analyzing some training volume time series graphs, setting LSTM neural network parameters, and using Python for rolling prediction. Some prediction graphs reflect an increasing trend in sports performance in the next month. Through analysis, we conclude that increasing training volume has a promoting effect on improving sports performance, but training volume is not absolutely positively correlated with sports performance. As the amount of training increases, the extent of performance improvement will gradually decrease, and there may even be a plateau period or a decline in performance. Therefore, in the actual training process, attention should be paid to physical load and fatigue index to develop a reasonable training plan in order to achieve maximum training benefits. Finally, error analysis, sensitivity analysis of historical data volume, testing, and improvement were conducted on the ARIMA model based on the above established models.},
booktitle = {Proceedings of the 2024 International Conference on Sports Technology and Performance Analysis},
pages = {377–382},
numpages = {6},
keywords = {Artificial intelligence, Deep learning, LSTM, Machine learning, Marathon sports, Sports performance prediction, Time series analysis, Training volume},
location = {
},
series = {ICSTPA '24}
}

@inproceedings{10.1145/3696673.3723074,
author = {Farjad, Sheikh Muhammad and Patllola, Sandeep Reddy and Kassa, Yonas and Grispos, George and Gandhi, Robin},
title = {Secure Edge Computing Reference Architecture for Data-driven Structural Health Monitoring: Lessons Learned from Implementation and Benchmarking},
year = {2025},
isbn = {9798400712777},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3696673.3723074},
doi = {10.1145/3696673.3723074},
abstract = {Structural Health Monitoring (SHM) plays a crucial role in maintaining aging and critical infrastructure, supporting applications such as smart cities and digital twinning. These applications demand machine learning models capable of processing large volumes of real-time sensor data at the network edge. However, existing approaches often neglect the challenges of deploying machine learning models at the edge or are constrained by vendor-specific platforms. This paper introduces a scalable and secure edge-computing reference architecture tailored for data-driven SHM. We share practical insights from deploying this architecture at the Memorial Bridge in New Hampshire, US, referred to as the Living Bridge project. Our solution integrates a commercial data acquisition system with off-the-shelf hardware running an open-source edge-computing platform, remotely managed and scaled through cloud services. To support the development of data-driven SHM systems, we propose a resource consumption benchmarking framework called edgeOps to evaluate the performance of machine learning models on edge devices. We study this framework by collecting resource utilization data for machine learning models typically used in SHM applications on two different edge computing hardware platforms. edgeOps was specifically studied on off-the-shelf Linux and ARM-based edge devices. Our findings demonstrate the impact of platform and model selection on system performance, providing actionable guidance for edge-based SHM system design.},
booktitle = {Proceedings of the 2025 ACM Southeast Conference},
pages = {145–154},
numpages = {10},
keywords = {edge computing, structural health monitoring, machine learning},
location = {Southeast Missouri State University, Cape Girardeau, MO, USA},
series = {ACMSE 2025}
}

@inbook{10.1145/3724504.3724593,
