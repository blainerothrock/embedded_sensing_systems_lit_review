pages = {639–644},
numpages = {6},
keywords = {Collaborative Edge Computing (CEC), Cybersecurity, Error Correction, Error Detection, Hardware Assisted Security (HAS), Machine Learning (ML), Physical Unclonable Functions (PUF), Security-by-Design (SbD)},
