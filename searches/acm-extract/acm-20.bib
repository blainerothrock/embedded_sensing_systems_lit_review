@inproceedings{10.1145/3641584.3641806,
author = {Ding, Xvfan and Zhao, Feng and Qiao, Yani and He, Zhenyu},
title = {Variance Value Stream Data Publishing Based on Differential Privacy Under Wearable Devices},
year = {2024},
isbn = {9798400707674},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3641584.3641806},
doi = {10.1145/3641584.3641806},
abstract = {The publishing of real-time data streams with differential privacy is one of the current research hotspots in the field of privacy protection. The existing data stream publishing mainly revolves around count publishing, while user vital signs data collected under wearable devices often need to be released using mean and variance values. For the release of variance value, this paper proposes a differentially private variance value release method based on Kalman filtering and adaptive sampling under wearable devices. This method combines Kalman filtering and adaptive sampling technology to dynamically allocate a privacy budget according to the fluctuation characteristics of the data stream. By introducing the global sensitivity of the variance value that adapts to the data fluctuation characteristics of wearable devices, it reduces the amount of added noise and improves the accuracy of published data. Experimental results show that compared with the filtering and adaptive sampling (FAST) algorithm for differential privacy time series monitoring, the algorithm proposed in this paper has higher availability of published data under the condition of meeting the same privacy budget.},
booktitle = {Proceedings of the 2023 6th International Conference on Artificial Intelligence and Pattern Recognition},
pages = {1470–1478},
numpages = {9},
keywords = {Kalman filter, adaptive sampling, differential privacy, streaming data release, variance statistics, wearable devices},
location = {Xiamen, China},
series = {AIPR '23}
}

