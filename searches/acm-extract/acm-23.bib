@inproceedings{10.1145/3603166.3632565,
author = {Filippini, Federica and Cavadini, Riccardo and Ardagna, Danilo and Lancellotti, Riccardo and Russo Russo, Gabriele and Cardellini, Valeria and Lo Presti, Francesco},
