@inproceedings{10.1145/3551660.3560911,
author = {Fayad, Moustafa and Hachani, Mohamed-Yacine and Mostefaoui, Ahmed and Chouali, Samir and Yahiaoui, R\'{e}da},
title = {Elderly Fall Detection: A Lightweight Kinect Based Deep Learning Approach},
