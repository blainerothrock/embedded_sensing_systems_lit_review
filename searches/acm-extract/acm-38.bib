@inproceedings{10.1145/3529190.3534740,
author = {Theodoridou, Christina and Antonopoulos, Dimitrios and Kargakos, Andreas and Kostavelis, Ioannis and Giakoumis, Dimitrios and Tzovaras, Dimitrios},
title = {Robot Navigation in Human Populated Unknown Environments based on Visual-Laser Sensor Fusion},
year = {2022},
isbn = {9781450396318},
