@inproceedings{10.1145/3597512.3599703,
author = {Men\'{e}ndez, H\'{e}ctor and Bello Orgaz, Gema},
title = {Stay Stress-Free with Complete Confidence: Trustworthiness of Autonomous Stress Detection Systems for Smart Devices},
year = {2023},
isbn = {9798400707346},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3597512.3599703},
