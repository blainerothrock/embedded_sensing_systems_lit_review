author = {Scopelliti, Gianluca and Pouyanrad, Sepideh and Noorman, Job and Alder, Fritz and Baumann, Christoph and Piessens, Frank and M\"{u}hlberg, Jan Tobias},
title = {End-to-End Security for Distributed Event-driven Enclave Applications on Heterogeneous TEEs},
