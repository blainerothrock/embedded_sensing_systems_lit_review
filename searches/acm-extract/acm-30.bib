@article{10.1145/3575811,
author = {Chatterjee, Kakali and Singh, Ashish and Neha and Yu, Keping},
title = {A Multifactor Ring Signature based Authentication Scheme for Quality Assessment of IoMT Environment in COVID-19 Scenario},
