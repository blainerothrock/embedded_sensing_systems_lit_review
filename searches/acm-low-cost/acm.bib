address = {New York, NY, USA},
url = {https://doi.org/10.1145/3636534.3649372},
doi = {10.1145/3636534.3649372},
abstract = {Multi-sensor fusion has been widely used by autonomous vehicles (AVs) to integrate the perception results from different sensing modalities including LiDAR, camera and radar. Despite the rapid development of multi-sensor fusion systems in autonomous driving, their vulnerability to malicious attacks have not been well studied. Although some prior works have studied the attacks against the perception systems of AVs, they only consider a single sensing modality or a camera-LiDAR fusion system, which can not attack the sensor fusion system based on LiDAR, camera, and radar. To fill this research gap, in this paper, we present the first study on the vulnerability of multi-sensor fusion systems that employ LiDAR, camera, and radar. Specifically, we propose a novel attack method that can simultaneously attack all three types of sensing modalities using a single type of adversarial object. The adversarial object can be easily fabricated at low cost, and the proposed attack can be easily performed with high stealthiness and flexibility in practice. Extensive experiments based on a real-world AV testbed show that the proposed attack can continuously hide a target vehicle from the perception system of a victim AV using only two small adversarial objects.},
booktitle = {Proceedings of the 30th Annual International Conference on Mobile Computing and Networking},
pages = {436–451},
numpages = {16},
keywords = {autonomous driving, multi-sensor fusion, adversarial attack},
location = {Washington D.C., DC, USA},
series = {ACM MobiCom '24}
}

@inproceedings{10.1145/3761668.3761699,
author = {Liu, Qiushuang and Li, Yuhang and Che, Qiuyue and Wang, Siyu and Liu, Feihong and Yang, Yang and Huang, Junlin and Li, Deping},
title = {Research on the Application of ACT Algorithm in High-Precision Block Assembly Tasks},
year = {2025},
isbn = {9798400713156},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3761668.3761699},
doi = {10.1145/3761668.3761699},
abstract = {In the current field of robotics, if some high-precision block-building tasks are to be achieved, it is often necessary to use visual sensors such as cameras to provide accurate target information for the robotic arm. Combined with high-precision servo drivers and motors, the position and attitude of the end effector of the robotic arm are accurately calculated through kinematic forward and inverse solutions. The information obtained by the visual system is taken as feedback and combined with the motion control of the robotic arm to form a closed-loop control system, thereby completing the high-precision construction task. However, the cost of implementing this approach is high, and it has high requirements for the environment as well as complex parameter adjustments. Then, can the same goal be achieved through other ways with lower costs and simpler processes? The imitation learning algorithm action chunking with transformers(ACT) seems to offer us a new direction. Through action blocking and time integration technology, it can effectively reduce the error of the robotic arm when imitating human actions for demonstration. Moreover, only the appropriate demonstration dataset needs to be generated for the robotic arm for direct end-to-end learning. There is no need to use high-resolution cameras and expensive motors either, which can meet the requirements of some high-precision tasks while reducing costs. Therefore, the goal of this paper is to explore the implementation effect of the ACT algorithm in actual task scenarios and goals, and analyze its implementation details and the feasibility of practical applications.},
booktitle = {Proceedings of the 2025 17th International Conference on Computer Modeling and Simulation},
pages = {210–216},
numpages = {7},
keywords = {Action Chunking with Transformers (ACT), Behavioral Cloning(BC), Imitation Learning},
location = {
