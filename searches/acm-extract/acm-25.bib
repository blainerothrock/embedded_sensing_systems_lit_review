}

@inproceedings{10.1145/3595916.3626425,
author = {Xie, Weiliang and Huang, Qian and Li, Chang and Wang, Yanfang and Liu, Yanwei},
title = {Hierarchical Multi-Scale Adaptive Conv-LSTM Network for Human Action Recognition Based on Wearable Sensors},
year = {2024},
isbn = {9798400702051},
