@inproceedings{10.1145/3639475.3640100,
author = {Oliveira, Tatalina and Barcomb, Ann and Santos, Ronnie De Souza and Barros, Helda and Baldassarre, Maria Teresa and Fran\c{c}a, Cesar},
title = {Navigating the Path of Women in Software Engineering: From Academia to Industry},
year = {2024},
isbn = {9798400704994},
publisher = {Association for Computing Machinery},
